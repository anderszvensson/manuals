import threading
import freej
import time
import sys

cx = freej.Context()
cx.init(400,300,0,0)

cx.plugger.refresh(cx)

lay = cx.open(sys.argv[1])
filt = cx.filters["vertigo"]
lay.add_filter(filt)
lay.active = True
cx.add_layer(lay)

th = threading.Thread(target = cx.start , name = "freej")
th.start();
